#!/bin/bash

### A command line radio player with mpv
#
# Usage: radio [a radio] or radio option [arg ...]
#
# radio fuji
#       - play a fujiyama radio.
#
# radio
#       - play a random radio, press 'q' to play the next.
#         this loops infinitely, press ctrl-c to exit.
#
# radio {-r|--rotate}
#       - rotate a radio in a specific time.
#         this loops infinitely, press ctrl-c to exit.
#
# radio {-a|--all}
#       - display all radios, choose a radio number.
#
# radio {-t|--test}
#       - test all radios whether work or not.
#         If failed, it logs the file named report.
#
# radio {-g|--group} {uk|us|kr|jp|mv|ln|lc}
#       - play a random group, press 'q' to play the next.
#         this loops infinitely, press ctrl-c to exit.
#
# radio {-h|--help}
#       - print this help.

### TODO
#
# add more urls

PLAYER="mpv"
PS3="Choose : "
RADIOSTARTLINE="### MY RADIO URLS"
RADIOENDLINE="### MY RADIO URLS END"
YOUTUBESTARTLINE="### MY YOUTUBE URLS"
YOUTUBEENDLINE="### MY YOUTUBE URLS END"
SCRIPTDIR=$(dirname -- "$(readlink -f -- "$0")")
REPORTPATH="$SCRIPTDIR/report"
REPORTFIRSTLINE="### REPORT"
TESTTIME=5
ROTATIONTIME=600
FILTER="^#\?$\|^##\+\|^#[^ ]"

x=0
while read -r line ; do
    (( x++ ))
    if [[ "$line" == "$RADIOSTARTLINE" ]]; then
        break
    fi
done < "$0"

# printf "\n\n RADIOSTARTLINE's number is $x \n\n"
urllist=$(tail -n +"$(( x + 4 ))" "$0")

x=0
while read -r line ; do
    (( x++ ))
    if [[ "$line" == "$RADIOENDLINE" ]]; then
        break
    fi
done <<< "$urllist"

radiolist=$(head -n +"$(( x - 2 ))" <<< "$urllist")
# printf "\n\n radiolist is $radiolist \n\n"
urlname=$(awk -F http '{print $1}' <<< "$urllist")
radioname=$(awk -F http '{print $1}' <<< "$radiolist")
grepstring="^# .*\b$1"
grepcount=$(grep -ic "$grepstring" <<< "$urlname")
# printf "\n\n grepcount is $grepcount \n\n"



if [[ -z $1 ]] ; then
    while true ; do
        randomradio=$(shuf -n 1 <<< "$radiolist")
        # filter for comments
        # basic regex: ‘\?’, ‘\+’, ‘\{’, ‘\|’, ‘\(’, and ‘\)’
        if (( $(grep -c "$FILTER" <<< "$randomradio") )) ; then
            # printf "\n\n"
            # awk '{ $1="" ; print $0 }' <<< "$randomradio"
            # printf "\n\n"
            # awk '{ print $1 }' <<< "$randomradio" | \
            #   sed 's/^#*/ /'
            # printf "\n\n"
            continue
        fi
        printf "\n\n"
        awk -F http '{print $1}' <<< "$randomradio" | \
            sed 's/# / /' | grep --color=auto .
        printf "\n\n"
        $PLAYER $(awk -F http '{print FS$2}' <<< "$randomradio") &
        lastbgpid=$!
        wait $lastbgpid
        sleep 1
    done
    exit 0
fi

if [[ $1 =~ ^(-g|--group)$ ]] ; then
    x=0
    while read -r line ; do
        (( x++ ))
        case "$2" in
            uk)
                if [[ "$line" =~ ^(## UK Radio) ]] ; then
                    break
                fi
                ;;
            us)
                if [[ "$line" =~ ^(## USA  Radio) ]] ; then
                    break
                fi
                ;;
            kr)
                if [[ "$line" =~ ^(## Korea  Radio) ]] ; then
                    break
                fi
                ;;
            jp)
                if [[ "$line" =~ ^(## Japan  Radio) ]] ; then
                    break
                fi
                ;;
            mv)
                if [[ "$line" =~ ^(## Music Video) ]] ; then
                    break
                fi
                ;;
            ln)
                if [[ "$line" =~ ^(## Live News) ]] ; then
                    break
                fi
                ;;
            lc)
                if [[ "$line" =~ ^(## Live Cam) ]] ; then
                    break
                fi
                ;;
            *)
                printf "\n\n Usage: radio -g {jp|kr|us|uk|mv|ln|lc} \n\n"
                exit 1
        esac
    done <<< "$urllist"
    grouplist=$(tail -n +"$(( x + 2 ))" <<< "$urllist")
    y=0
    while read -r line ; do
        (( y++ ))
        if [[ "$line" =~ ^##+ ]]; then
            # printf "$line"
            break
        fi
    done <<< "$grouplist"
    grouplist=$(head -n "$(( y - 2 ))" <<< "$grouplist")
    while true ; do
        randomradio=$(shuf -n 1 <<< "$grouplist")
        if (( $(grep -c "$FILTER" <<< "$randomradio") )) ; then
            continue
        fi
        printf "\n\n"
        awk -F http '{print $1}' <<< "$randomradio" | \
            sed 's/# / /' | grep --color=auto .
        printf "\n\n"
        $PLAYER $(awk -F http '{print FS$2}' <<< "$randomradio") &
        lastbgpid=$!
        wait $lastbgpid
        sleep 1
    done
    exit 0
fi

if [[ $1 =~ ^(-a|--all)$ ]] ; then
    radio .
fi

if [[ $1 =~ ^(-r|--rotate)$ ]] ; then
    while true ; do
        randomradio=$(shuf -n 1 <<< "$radiolist")
        # filter for comments
        if (( $(grep -c "$FILTER" <<< "$randomradio") )) ; then
            continue
        fi
        printf "\n\n"
        awk -F http '{print $1}' <<< "$randomradio" | \
            sed 's/# / /' | grep --color=auto .
        printf "\n\n"
        $PLAYER $(awk -F http '{print FS$2}' <<< "$randomradio") &
        lastbgpid=$!
        sleep $TESTTIME
        # fail playing
        if (( ! $(ps -A | grep -c $lastbgpid) )) ; then
            continue
        fi
        sleep $ROTATIONTIME
        kill -9 $lastbgpid
        sleep 1
    done
    exit 0
fi

if [[ $1 =~ ^(-t|--test)$ ]] ; then
    cat > "$REPORTPATH" <<< $REPORTFIRSTLINE
    while read -r line ; do
        printf "\n\n"
        awk -F http '{print $1}' <<< $line | \
            sed 's/# / /' | grep --color=auto .
        printf "\n\n"
        $PLAYER $(awk -F http '{print FS$2}' <<< $line)
        lastbgpid=$!
        sleep $TESTTIME
        if (( ! $(ps -A | grep -c $lastbgpid) )) ; then
            echo "Fail: $line" >> "$REPORTPATH"
        else
            kill -9 $lastbgpid
        fi
        sleep 1
    done <<< "$urllist"
    printf "\n\n"
    cat "$REPORTPATH"
    printf "\n\n"
    exit 0
fi

if [[ $1 =~ ^(-h|--help)$ ]] ; then
    x=0
    while read -r line ; do
        (( x++ ))
        if [[ "$line" =~ ^(# Usage) ]]; then
            break
        fi
    done < "$0"
    helplist=$(tail -n +$(( x - 2 )) "$0")
    x=0
    while read -r line ; do
        (( x++ ))
        if [[ "$line" =~ (^$) ]]; then
            break
        fi
    done <<< "$helplist"
    helplist=$(head -n $x <<< "$helplist")
    printf "\n"
    printf "$helplist" | sed 's/#\+//' | sed 's/^ //'
    printf "\n"
    exit 0
fi

if (( $grepcount == 1 )) ; then
    printf "\n\n"
    grep -i "$grepstring" <<< "$urlname" | \
        sed 's/# / /' | grep --color=auto .
    printf "\n\n"
    theurlname=$(grep -i "$grepstring" <<< "$urlname" | \
                       sed 's/# / /')
    $PLAYER $(grep -i "$theurlname" <<< "$urllist" | \
                  awk -F http '{print FS$2}')
elif (( $grepcount > 1 )) ; then
    urlnames=$(grep -i "$grepstring" <<< "$urlname" | \
                     sed 's/# //')
    readarray -t arr_urlnames <<< "$urlnames"
    select url in "${arr_urlnames[@]}" ; do
        selectedurl="$url"
        break
    done
    printf "\n\n"
    printf "$selectedurl" | grep --color=auto .
    printf "\n\n"
    $PLAYER $(grep -i "$selectedurl" <<< "$urllist" | \
                  awk -F http '{print FS$2}')
else
    printf "\n\n Sorry, the \"$1\" does not match. \n\n"
fi



### MY RADIO URLS
